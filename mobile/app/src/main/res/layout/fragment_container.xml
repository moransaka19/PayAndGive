<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="50sp">

    <TextView
        android:id="@+id/container_id_text"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/container_eat_text"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_toEndOf="@id/container_id_text" />

    <TextView
        android:id="@+id/container_price_text"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_toEndOf="@id/container_eat_text" />

    <CheckBox
        android:id="@+id/container_is_book_check"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_toEndOf="@id/container_price_text" />

</RelativeLayout>